		tav = new MoveIsContiguousValidator();
	}
	
	@Test
	public void testPlacingPieceOnContiguos(){
		assertTrue(tav.isValidMove(theBoard, piece, new MoveCounterImpl, new HantoCoordinateImpl(0,1), new HantoCoordinateImpl(1,1)))
