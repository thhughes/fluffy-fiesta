package hanto.Test.studentThhughes.common;

import hanto.common.*;
import static hanto.common.HantoPlayerColor.*;

public class MoveCounter {
	HantoPlayerColor currentColor;
	
	int red = 0;
	int blue = 0;
	
	public MoveCounter(HantoPlayerColor startingColor){
		startColor = startingColor;
	}
	
	public int getNumberMoves(HantoPlayerColor player){
		int result = -1;
		if(player == RED){
			result = red;
		}else{
			result = blue;
		}
		return result;
		
	}

}
