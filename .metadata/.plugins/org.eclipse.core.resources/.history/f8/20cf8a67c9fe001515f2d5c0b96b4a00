package hanto.studentThhughes.common.hantoPiece;

import hanto.common.HantoPiece;
import static hanto.common.HantoPieceType.*;
import hanto.common.HantoPieceType;
import hanto.common.HantoPlayerColor;

public class HantoPieceFactory {
	private static HantoPieceFactory instance = new HantoPieceFactory();
	
	private HantoPieceFactory(){
		
	}
	
	
	private static HantoPieceFactory getInstance()
	{
		return instance;
	}
	
	public HantoPiece makeHantoPiece(HantoPieceType hpt, HantoPlayerColor hpc)
	{
		HantoPiece piece = null;
		
		switch (hpt){
			case BUTTERFLY:
				piece = new HantoPieceImpl(hpc,BUTTERFLY);
				break;
			case SPARROW:
				piece = new HantoPieceImpl(hpc,SPARROW);
				break;
			case CRAB:
				break;
			case CRANE:
				break;
			case DOVE:
				break;
			case HORSE:
				break;
			default:
				break;
		}
		return piece;
	}
}
