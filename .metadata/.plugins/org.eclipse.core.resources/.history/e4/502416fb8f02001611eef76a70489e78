package hanto.studentthhughes.common.movecounter;

import static hanto.common.HantoPlayerColor.RED;

import hanto.common.HantoPlayerColor;

/**
 * Move counter implementation
 * @author Troy
 *
 */
public class MoveCounter{
	HantoPlayerColor currentColor;
	
	int red;
	int blue;
	
	public MoveCounter(){
		red = 0;
		blue = 0;
	}
	
	/**
	 * Get's the number of moves of a given player
	 * 
	 * @param player
	 * 				HantoPlayerColor of the player
	 * @return
	 * 			int of the number of turns of a player. 
	 */
	public int getNumberMoves(HantoPlayerColor player){
		int result = -1;
		if(player == RED){
			result = red;
		}else{
			result = blue;
		}
		return result;
	}
	
	/**
	 * Increments the number of moves of a given player
	 * 
	 * @param player
	 * 				HantoPlayerColor of the player to increment
	 */
	public void incrementNumberMoves(HantoPlayerColor player){
		if(player == RED){
			red++;
		}else{
			blue++;
		}
	}
	
	/**
	 * This function checks if the game is on the first move of the game
	 *
	 * @return
	 * 			Returns a boolean if the item is of the first move. 
	 */
	public boolean isFirstMoveOfGame(){
		return (getNumberMoves(HantoPlayerColor.RED) == 0) &&
				(getNumberMoves(HantoPlayerColor.BLUE) == 0);
	}

}